{
  "manifest_version": 3,
  "name": "YouTube Link Downloader",
  "version": "1.0",
  "description": "Send links to local Pyhton + yt-dlp downloader",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "contextMenus",
    "nativeMessaging",
    "activeTab"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "*://*.youtube.com/*",
    "*://*.youtu.be/*",
    "*://*.youtube.ru/*"
  ]
}